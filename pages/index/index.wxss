/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 42rpx 10rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.weui-search-bar{
  margin-bottom: 32rpx;
}

.searchbar-result .weui-icon-clear {
  position: absolute;
  top: 0;
  right: 0;
  padding: 10px 8px;
  font-size: 0;
}
.searchbar-result.weui-cells{
  position: relative;
  margin-top: 10rpx;
  background-color: #FFFFFF;
  line-height: 1.41176471;
  font-size: 17px;
  margin-bottom: 30rpx;
}
.searchbar-result.weui-cells:before, .searchbar-result.weui-cells:after{
  display: none;
}
.searchbar-result .weui-cell:before{
  display: none;
}
.searchbar-result .weui-cell:after {
  content: " ";
  position: absolute;
  left: 10rpx;
  bottom: 0;
  right: 15rpx;
  height: 1px;
  border-bottom: 1rpx solid #e9e9e9;
  color: #e9e9e9;
}
.searchbar-result .weui-cell{
  color: #9B9B9B;
  font-weight: normal;
  font-size:28rpx;
}
